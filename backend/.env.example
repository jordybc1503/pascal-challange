# Server
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://messaging_user:messaging_pass@localhost:5432/messaging_db?schema=public

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Encryption (CRITICAL: Generate a strong random key for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MASTER_KEY=your-master-encryption-key-min-32-chars-CHANGE-IN-PRODUCTION

# Multi-tenant
# Set to true to allow tenant creation via POST /tenants (disable in production)
BOOTSTRAP_MODE=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI/LLM (for future integration)
AI_PROVIDER=openai
AI_API_KEY=
AI_MODEL=gpt-4
AI_DEBOUNCE_MS=10000

# BullMQ
BULLMQ_QUEUE_NAME=ai-analysis
BULLMQ_CONCURRENCY=5

# WhatsApp Configuration
# Public URL for webhooks (e.g., https://yourdomain.com/api/v1/whatsapp/webhook/:providerAccountId)
WHATSAPP_WEBHOOK_PUBLIC_URL=https://yourdomain.com/api/v1/whatsapp/webhook

# NOTE: WhatsApp provider credentials are stored ENCRYPTED in the database
# Configure them via POST /whatsapp/config endpoint after creating a tenant
#
# For Meta WhatsApp Cloud API:
# - Get phone_number_id from Meta Business Manager
# - Generate access token from Meta Developer Console
# - Configure webhook verify token (random string)
#
# For Twilio:
# - Get AccountSid from Twilio Console
# - Get Auth Token from Twilio Console
# - Use Twilio WhatsApp number

# Logging
LOG_LEVEL=info
